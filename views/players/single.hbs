
{{!-- ./views/players/single.hbs --}}

{{#with player}}

<div class="bg-white">
  <div class="mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
    <!-- Product -->
    <div class="lg:grid lg:grid-rows-1 lg:grid-cols-7 lg:gap-x-8 lg:gap-y-10 xl:gap-x-16">
      <!-- Product image -->
      <div class="lg:row-end-1 lg:col-span-4">
        <div class="aspect-w-4 aspect-h-3 rounded-lg bg-gray-100 overflow-hidden">
          <img src="{{this.photoUrl}}" alt="Imagen no disponible" class="object-center object-cover">
        </div>
      </div>

      <!-- Product details -->
      <div class="max-w-2xl mx-auto mt-14 sm:mt-16 lg:max-w-none lg:mt-0 lg:row-end-2 lg:row-span-2 lg:col-span-3">
        <div class="flex flex-col-reverse">
          <div class="mt-4">
            <h1 class="text-2xl font-extrabold tracking-tight text-gray-900 sm:text-3xl">{{this.usuario}}</h1>

            <p class="text-sm text-gray-500 mt-2">Ciudad: {{this.ciudad}}
          </div>
        </div>
        <p class="text-gray-500 mt-6">Edad: {{this.edad}} a√±os.</p>
        <p class="text-gray-500 mt-6">Descripcion: {{this.descripcion}} </p>
        <p class="text-gray-500 mt-6">Posicion: {{this.posicion}} </p>
        <p class="text-gray-500 mt-6">Campeonatos conseguidos: {{this.campeonatos}}.</p>
        <p class="text-gray-500 mt-6">Pierna dominante: {{this.pierna}}.</p>
        <p class="text-gray-500 mt-6">Tarifa por partido: ${{this.tarifa}}.</p>


        <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-2">
          <a href="/signup-user" class="w-full bg-indigo-600 border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-50 focus:ring-indigo-500">Crea una cuenta de usuario par contactarlo</a>
        </div>
      </div>
    </div>
  </div>
</div>
{{/with}}