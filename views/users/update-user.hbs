<div class="container contact">
	<div class="row">
		<div class="col-md-3">
			<div class="contact-info">
				<img src="https://image.ibb.co/kUASdV/contact-image.png" alt="image"/>
				<h2>Change your credentials here,</h2>
				<h4>{{user.usuario}}</h4>
			</div>
		</div>
		<div class="col-md-9">
			<div class="contact-form">
				<div class="form-group">
                    <form action="/users/{{user._id}}/edit" method="POST">
				  <label class="control-label col-sm-2" for="fname">Username</label>
				  <div class="col-sm-10">          
					<input type="text" class="form-control" id="usuario" placeholder="Enter new Username" name="usuario">
				  </div>
				</div>
				
				<div class="form-group">
				  <label class="control-label col-sm-2" for="email">email</label>
				  <div class="col-sm-10">
					<input type="email" class="form-control" id="email" placeholder="Enter new email" name="email">
				  </div>
				</div>
				
				<div class="form-group">        
				  <div class="col-sm-offset-2 col-sm-10">
					<button  class="relative inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-500 hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-indigo-500">Submit</button>
                    </form>
                  </div>

				</div>
			</div>
		</div>
	</div>